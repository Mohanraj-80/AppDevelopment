<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudanother"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/diplay"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.2"
            android:text="201501080@rajalakshmi.edu.in"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="@font/fontone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="Enter the Maths mark:"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            
            android:id="@+id/math"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g., 100"
            android:inputType="number"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3E5FC"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="@font/fontone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="Enter the Chemistry mark:"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/che"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g., 97"
            android:inputType="number"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3E5FC"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="@font/fontone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="Enter the Physics mark:"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/phy"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g., 99"
            android:inputType="number"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3E5FC"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="@font/fontone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="Enter the Community:"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:fontFamily="@font/fontone"
            android:id="@+id/comm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g., MBC"
            android:inputType="text"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3E5FC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.2"
            android:text="Enter the Department:"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/dept"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g., CS"
            android:inputType="text"
            android:letterSpacing="0.2"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3E5FC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#17943D"
            android:elevation="4dp"
            android:text="Get colleges"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <Button
            android:id="@+id/logout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#17943D"
            android:elevation="4dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
